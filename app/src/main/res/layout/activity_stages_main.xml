<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/mainbackground"
    android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Stage"
        android:id="@+id/buttonMainstage"
        android:onClick="getMainStage"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vanhalla"
        android:id="@+id/buttonVanhalla"
        android:onClick="getVanhallaStage"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musicmaker"
        android:id="@+id/buttonMusicMaker"
        android:onClick="getMusicmakerStage"/>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Unplugged Stage"
    android:id="@+id/buttonUnplugged"
    android:onClick="getUnpluggedStage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melomania Stage"
        android:id="@+id/buttonMelomania"
        android:onClick="getMelomaniaStage"/>

</LinearLayout>
